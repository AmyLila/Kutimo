<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatePicker">

    <TextView
        android:id="@+id/textView"
        android:layout_width="351dp"
        android:layout_height="62dp"
        android:layout_marginBottom="132dp"
        android:fontFamily="sans-serif-thin"
        android:text="Which days did you read?"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/calendarView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:abbreviationsBarColor="@color/dark_blue"
        app:eventsEnabled="true"
        app:headerColor="@color/snow4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:pagesColor="@color/snow3"
        app:selectionColor="@color/dark_blue"
        app:todayLabelColor="@color/light_blue"
        app:type="many_days_picker"
        tools:layout_editor_absoluteY="38dp">

    </com.applandeo.materialcalendarview.CalendarView>

</androidx.constraintlayout.widget.ConstraintLayout>